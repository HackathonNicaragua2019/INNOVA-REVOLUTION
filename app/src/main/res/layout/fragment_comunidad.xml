                                android:text="@string/_19_respuestas"
                                tools:ignore="RelativeOverlap" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgFavorite2"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
