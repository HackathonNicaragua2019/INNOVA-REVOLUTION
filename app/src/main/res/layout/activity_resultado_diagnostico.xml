<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ResultadoDiagnostico">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:layout_margin="10dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manchas_negras_en_las_hojas"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Title"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgDiagnostico"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20sp"
                android:scaleType="centerCrop"
                android:src="@drawable/diagnostico"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/box_diagnostico">
                    <TextView android:id="@+id/txtSintomas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/s_ntomas"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView android:layout_below="@id/txtSintomas"
                        android:layout_width="wrap_content"
                        android:id="@+id/txtSintomas2"
                        android:layout_height="wrap_content"
                        android:text="@string/relleno2"
                        app:drawableStartCompat="@drawable/ic_baseline_chevron_right_24" />

                    <TextView android:layout_below="@id/txtSintomas2"
                        android:id="@+id/txtSintomas4"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:text="@string/relleno2"
                        app:drawableStartCompat="@drawable/ic_baseline_chevron_right_24" />
                    <TextView android:layout_below="@id/txtSintomas4"
                        android:id="@+id/txtSintomas5"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:text="@string/soluci_n"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_baseline_medication_24" />
                    <TextView android:layout_below="@id/txtSintomas5"
                        android:id="@+id/txtSintomas6"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:text="@string/relleno2"
                        app:drawableStartCompat="@drawable/ic_baseline_chevron_right_24" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>